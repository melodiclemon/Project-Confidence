            <string>///draw the inventory

if(instance_exists(player))
{
    if(player.state == player_overworld_doggieMenuState) // TODO: Change this if-statement so it works both in Combat and in the Overworld
    {
        
        //draw the background
        draw_sprite(bg,0,bgX,bgY);
        
        //draw upper arrow
        if(inventoryPosition != 0)
            draw_sprite_ext(arrow,0,bgX+29,bgY+10,1,-1,0,c_white,1);
        
        //draw lower arrow
        if(inventoryPosition+tricksDisplayed &lt; ds_list_size(inventory))
            draw_sprite_ext(arrow,0,bgX+29,bgY+76,1,1,0,c_white,1);
          
        //draw tricks
        for(i = 0; i &lt; tricksDisplayed; i++)
        {
            //if the slot does not contain an trick we don't draw it.
            if(trick[ds_list_find_value(inventory,i+inventoryPosition),trickData.trickId] == 0)
                continue
            else
            {
                //draw trick name
                if(trick[ds_list_find_value(inventory,i+inventoryPosition),trickData.trickId] == trickEquipped)
                    draw_set_color(c_yellow);
                else
                    draw_set_color(c_white);
                    
                draw_set_valign(fa_center);
                draw_set_halign(fa_left);
                draw_text_transformed(bgX+7,bgY+17+(i*13),trick[ds_list_find_value(inventory,i+inventoryPosition),trickData.name],0.3,0.3,0);
                
                //reset draw
                draw_set_color(c_black);
                draw_set_valign(fa_top);
                draw_set_halign(fa_left);
            }
        }    
    }
}
